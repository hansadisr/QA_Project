{
  "name": "task-management-system",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "setup": "npm ci && cd backend && npm ci && cd ../frontend && npm ci",
    "build:frontend": "cd frontend && npm run build",
    "serve:frontend": "npx serve -s frontend/build -l 3000",
    "start:backend": "node backend/server.js",
    "test:selenium": "jest --config jest.e2e.config.cjs --runInBand",
    "e2e": "npm run build:frontend && start /B cmd /C \"npm run start:backend\" && npx wait-on http://localhost:4000/health && start /B cmd /C \"npm run serve:frontend\" && npx wait-on http://localhost:3000 && npm run test:selenium",
    "test:postman": "npx newman run tests/postman/collection.json --env-var baseUrl=http://localhost:4000"
    
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "chromedriver": "^140.0.3",
    "jest": "^30.1.3",
    "newman": "^6.2.1",
    "selenium-webdriver": "^4.35.0",
    "serve": "^14.2.5",
    "supertest": "^7.1.4",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "prop-types": "^15.8.1",
    "sanitize-html": "^2.17.0"
  }
}
